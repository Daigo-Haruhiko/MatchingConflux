<div class="profile-index-wrapper">
<div class="container">
  <% @profile_favorite_profiles.each do |profile| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="profile-index-single">
        <h2 class="profile-author">
          <% if profile.company.avatar.url %>
          <%= image_tag profile.company.avatar.url, class: 'image-circle' %>
          <% else %>
          <%= image_tag 'icons/default.png', class: 'image-circle' %>
          <% end %>
          <%= profile.company.name %>
        </h2>
        <hr>
        <p class="profile-title">
          年収
        </p>
        <p class="profile-text">
          <%= profile.salary %>万円
        </p>

        <p class="profile-title">
          連絡先
        </p>
        <p class="profile-text">
          <%= profile.phone %>
        </p>
        <p class="profile-title">
          住所
        </p>
        <p class="profile-text">
          <%= profile.address %>
        </p>
        <p class="profile-title">
          概要
        </p>
        <p class="profile-text">
          <%= profile.description %>
        </p>
        <%= image_tag profile.image.url %>
        <p class="profile-title">
          <% if company_signed_in? && current_company.id == profile.company_id %>
          <%= link_to "編集", edit_profile_path(profile.id), class: 'btn-common btn-edit text-white' %>
          <% end %>

          <% if company_signed_in? && current_company.id == profile.company_id %>
          <%= link_to "削除", profile_path(profile.id), method: :delete, data:{confirm: "本当に削除しますか？"}, class: 'btn-common btn-delete text-white' %>
          <% end %>

          <%= link_to "お気に入りから削除する", profile_favorite_path(profile, profile_id: profile.id), method: :delete, class: 'btn-common btn-delete text-white' %>
        </p>
        <p id="pageTop"><a href="#">トップへ</a></p>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>
