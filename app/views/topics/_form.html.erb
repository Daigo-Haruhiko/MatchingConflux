<%= form_for @topic do |f| %>

<div class="form-group">
  <%= f.label :salary %>
  <%= f.text_field :salary, class: 'form-control' %>
</div>
<div class="form-group" >
  <%= f.label :phone %>
  <%= f.text_field :phone, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :image %>
  <%= f.file_field :image, class: 'form-cotrol' %>
</div>
<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control' %>
</div>

<%= f.submit '投稿', class: 'btn btn-black btn-block' %>
<% end %>
