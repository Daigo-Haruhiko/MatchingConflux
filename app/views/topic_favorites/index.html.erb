<div class="topic-index-wrapper">
  <div class="container">
    <% @topic_favorite_topics.each do |topic| %>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="topic-index-single">
          <h2 class="topic-author">
            <% if topic.user.avatar.url %>
            <%= image_tag topic.user.avatar.url, class: 'image-circle' %>
            <% else %>
            <%= image_tag 'icons/default.png', class: 'image-circle' %>
            <% end %>
            <%= topic.user.name %>
          </h2>
          <hr>
          <p class="topic-title">
            年収
          </p>
          <p class="topic-text">
            <%= topic.salary %>万円
          </p>

          <p class="topic-title">
            連絡先
          </p>
          <p class="topic-text">
            <%= topic.phone %>
          </p>
          <p class="topic-title">
            住所
          </p>
          <p class="topic-text">
            <%= topic.address %>
          </p>
          <p class="topic-title">
            大学
          </p>
          <p class="topic-text">
            <%= topic.college %>大学
          </p>
          <p class="topic-title">
            概要
          </p>
          <p class="topic-text">
            <%= topic.description %>
          </p>
          <%= image_tag topic.image.url %>
          <p class="topic-title">
            <%= link_to "お気に入り削除", topic_favorite_path(topic, topic_id: topic.id), method: :delete, class: 'bt-samp31 delete' %>
          </p>
          <p id="pageTop"><a href="#">トップへ</a></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
